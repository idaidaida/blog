.hero
  .container.text-white
    .hero-padding
      .row
        .col-6
          %h1 Blog Site
          .lead ブログサイトです。ブログを書くことができます。
          .mt-3
            = link_to "サインアップ", new_account_registration_path,class:"btn btn-primary"
        .col-6
          .card.opacity-light.text-black
            .card-body
              = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
                .form-inputs
                  = f.input :email,required: false,autofocus: true,input_html: { autocomplete: "email" }
                  = f.input :password,required: false,input_html: { autocomplete: "current-password" }
                  = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
                .form-actions
                  = f.button :submit, "ログイン",class:"btn btn-primary"
              = render "devise/shared/links"
